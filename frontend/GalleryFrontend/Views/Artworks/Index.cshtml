@model GalleryFrontend.Models.ArtworkFilterModel

@{
    ViewData["Title"] = "Artworks List";
}

<h1 class="text-center">Artworks</h1>

<!-- Formular căutare după titlu -->
<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchTitle" class="form-control" placeholder="Search by title" value="@Model.SearchTitle" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<!-- Formular filtrare după tip -->
<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <select name="type" class="form-select">
            <option value="All" selected="@(Model.SelectedType == "All")">All Types</option>
            <option value="Painting" selected="@(Model.SelectedType == "Painting")">Painting</option>
            <option value="Sculpture" selected="@(Model.SelectedType == "Sculpture")">Sculpture</option>
            <option value="Photography" selected="@(Model.SelectedType == "Photography")">Photography</option>
        </select>
        <button type="submit" class="btn btn-primary">Filter By Type</button>
    </div>
</form>

<!-- Formular filtrare după artist -->
<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <select name="artistId" class="form-select">
            <option value="" selected="@(Model.SelectedArtistId == null)">All Artists</option>
            @foreach (var artist in Model.Artists)
            {
                <option value="@artist.Id" selected="@(Model.SelectedArtistId == artist.Id)">@artist.Name</option>
            }
        </select>
        <button type="submit" class="btn btn-primary">Filter By Artist</button>
    </div>
</form>

<!-- Formular filtrare după preț -->
<form asp-action="Index" method="get" class="mb-3">
    <div class="form-group">
        <label for="maxPrice">Max Price: <span id="priceValue">@(Model.MaxPrice?.ToString("F2") ?? "50000.00") $</span></label>
        <input type="range" name="maxPrice" id="maxPrice" class="form-range" min="10000" max="50000" step="100" value="@(Model.MaxPrice ?? 50000)" oninput="document.getElementById('priceValue').innerText = this.value + ' $'" />
        <button type="submit" class="btn btn-primary mt-2">Filter By Price</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Year Created</th>
            <th>Type</th>
            <th>Artist Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var artwork in Model.Artworks)
        {
            <tr>
                <td>@artwork.Id</td>
                <td>@artwork.Title</td>
                <td>@artwork.YearCreated</td>
                <td>@artwork.Type</td>
                <td>@artwork.ArtistName</td>
                <td>@artwork.Price.ToString("F2") $</td>
                <td>
                    <a class="btn btn-info btn-sm" href="/artworks/viewimages?artworkId=@artwork.Id">View Images</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-secondary" href="/">Back to Home</a>

<script>
    // Actualizează afișarea valorii slider-ului la încărcare
    document.getElementById('priceValue').innerText = document.getElementById('maxPrice').value + ' $';
</script>