@model List<string>

@{
	ViewData["Title"] = "Artwork Images";
}

<h1 class="text-center mt-3">Artwork Images</h1>

@if (ViewBag.Error != null)
{
	<div class="alert alert-warning text-center">@ViewBag.Error</div>
}

@if (Model != null && Model.Count > 0)
{
	<div class="d-flex flex-wrap justify-content-center mt-4">
		@foreach (var imgUrl in Model)
		{
			if (!string.IsNullOrEmpty(imgUrl))
			{
				<div class="m-2 border rounded p-2 shadow-sm">
					<img src="data:image/jpeg;base64,@imgUrl" 
					     alt="Artwork Image" 
					     class="img-fluid"
					     style="max-height:300px;" />
				</div>
			}
		}
	</div>
}
else if (ViewBag.Error == null)
{
	<div class="text-center text-muted mt-5">
		No images found for this artwork.
	</div>
}

