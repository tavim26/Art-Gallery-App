@model GalleryFrontend.Models.ArtworkImageModel

@{
    ViewData["Title"] = "Add Image";
}

<h2 class="text-center mt-3">Add Image to Artwork</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-action="AddImage" method="post">
    <input type="hidden" asp-for="ArtworkId" />

    <div class="mb-3">
        <label class="form-label">Image URL (or path)</label>
        <input asp-for="ImageUrl" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Add</button>
    <a asp-action="EmployeeIndex" class="btn btn-secondary ms-2">Cancel</a>
</form>
