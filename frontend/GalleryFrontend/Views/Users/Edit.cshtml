@model GalleryFrontend.Models.UserModel

@{
    ViewData["Title"] = "Edit User";
}

<h2 class="text-center mt-3">Edit User</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-action="Edit" method="post" class="mt-4">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Role</label>
        <select asp-for="Role" class="form-select" required>
            <option value="Employee" selected="@(Model.Role == "Employee")">Employee</option>
            <option value="Manager" selected="@(Model.Role == "Manager")">Manager</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email" class="form-control" type="email" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Phone</label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
