@model List<GalleryFrontend.Models.ArtistModel>

@{
	ViewData["Title"] = "Artists List";
}

<h1 class="text-center">Artists</h1>

<form asp-action="Index" method="get" class="mb-3">
	<div class="input-group">
		<input type="text" name="name" class="form-control" placeholder="Search by name" value="@ViewBag.SearchName" />
		<button type="submit" class="btn btn-primary">Search</button>
	</div>
</form>

<table class="table table-striped">
	<thead>
	<tr>
		<th>Id</th>
		<th>Name</th>
		<th>Birthplace</th>
		<th>Birth Date</th>
		<th>Nationality</th>
		<th>Actions</th>
	</tr>
	</thead>
	<tbody>
	@foreach (var artist in Model)
	{
		<tr>
			<td>@artist.Id</td>
			<td>@artist.Name</td>
			<td>@artist.Birthplace</td>
			<td>@(artist.BirthDate?.ToString("yyyy-MM-dd") ?? "-")</td>
			<td>@artist.Nationality</td>
			<td>
				<a class="btn btn-info btn-sm" href="/artists/viewphoto?id=@artist.Id">View Photo</a>
			</td>
		</tr>
	}
	</tbody>
</table>

<a class="btn btn-secondary" href="/">Back to Home</a>